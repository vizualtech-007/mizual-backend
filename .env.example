# Mizual Backend Environment Variables

# Environment (production, preview)
ENVIRONMENT=production

# Rate Limiting Configuration
RATE_LIMIT_DAILY_IMAGES=3
RATE_LIMIT_BURST_SECONDS=10
RATE_LIMIT_STATUS_CHECKS_PER_MINUTE=30

# LLM Configuration for Prompt Enhancement
ENABLE_PROMPT_ENHANCEMENT=true
LLM_PROVIDER=gemini           # Options: gemini, openai
LLM_MODEL=gemini-1.5-flash    # Model name for selected provider
LLM_API_KEY=your_api_key_here # API key for selected provider
LLM_MAX_IMAGE_DIMENSION=1024  # Image resizing limit
LLM_TIMEOUT=5                 # Timeout in seconds

# BFL API Key (Required)
BFL_API_KEY=your_bfl_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mizual_db

# Storage Configuration (S3/MinIO)
S3_BUCKET_NAME=mizual-images
S3_ENDPOINT_URL=http://localhost:9000
S3_PUBLIC_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# Queue Configuration (Redis/Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI API Configuration
FLUX_API_URL=https://api.bfl.ai/v1/flux-kontext-pro

# Development Settings
PYTHONUNBUFFERED=1